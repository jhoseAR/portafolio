---
import Header from '../components/Header.astro';
import '@fontsource-variable/roboto-mono';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body  class="px-4 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]">
		<div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 "></div>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;

	}
	html {
		font-family: 'Roboto Mono Variable', sans-serif;
		background-color: rgb(30, 32, 32);
		scroll-behavior: smooth;

	}
	body{
		display: flex;
		justify-content: center;
		background-color: #00000000;
		flex-direction: column;
		height: 100%;
	}
	@media  (prefers-reduced-motion:reduce){
	html{
		scroll-behavior: auto;

	}
    }



</style>
